{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: 当前文件",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--config", "config.ini"],
            "envFile": "${workspaceFolder}/.env"
        },
        {
            "name": "Python: 主程序",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["--config", "config.ini"],
            "envFile": "${workspaceFolder}/.env"
        }
    ]
}